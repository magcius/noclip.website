{
    "compilerOptions": {
        "target": "es6",
        "alwaysStrict": true,
        "baseUrl": "./src/",
        "downlevelIteration": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictFunctionTypes": true,
        "lib": [
            "es2015",
            "es2015.promise",
            "es2016.array.include",
            "dom"
        ],
        "sourceMap": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "types": [
            "gl-matrix",
            "webassembly-js-api",
            "webgl2",
            "pako"
        ],
    },
    "include": [
        "./src/"
    ],
    "exclude": [
        "**/assembly/*.ts",
        "**/worker/*.ts",
        "**/tools/*.ts"
    ]
}
